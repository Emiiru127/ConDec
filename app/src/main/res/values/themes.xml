<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ConDec" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/blue_main_background</item>
        <item name="android:background">@color/blue_main_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkboxStyle">@style/MyCheckboxStyle</item>
        <item name="android:checkboxStyle">@style/MyCheckboxStyle</item>
    </style>

    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/green</item>
        <item name="buttonTint">@color/white</item>
        <item name="color">@color/black_main_background</item>
        <item name="colorButtonNormal">@color/black_main_background</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/custom_switch_thumb</item>
        <item name="android:track">@drawable/custom_switch_track</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:switchMinWidth">50dp</item>
        <item name="android:switchPadding">8dp</item> <!-- Less padding for compact size -->
        <item name="android:textOn">On</item>
        <item name="android:textOff">Off</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item> <!-- Text size for "On" and "Off" -->
        <item name="android:switchTextAppearance">@style/CustomSwitchTextAppearance</item>
    </style>

    <style name="CustomSwitchTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item> <!-- Smaller text size for better fit -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>



    <style name="Theme.ConDec" parent="Base.Theme.ConDec" />
</resources>