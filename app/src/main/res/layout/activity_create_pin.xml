<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnConfirmCreatePin"
        android:layout_width="201dp"
        android:layout_height="44dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/gray"
        android:enabled="false"
        android:text="Confirm"
        android:textColor="@color/black_main_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.463" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="273dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_app_icon" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Create your PIN"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/create_pin_icon" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="177dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:gravity="center|left"
        android:text="Enter new PIN"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/pinView1CreateBackground"
        android:layout_width="328dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/layout_round_main_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17">

        <TextView
            android:id="@+id/pinView1Create1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/pinView1Create2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/pinView1Create3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/pinView1Create4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="177dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:gravity="center|left"
        android:text="Re-enter new PIN"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinView1CreateBackground" />

    <LinearLayout
        android:id="@+id/pinView2CreateBackground"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/layout_round_main_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18">

        <TextView
            android:id="@+id/pinView2Create1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/pinView2Create2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/pinView2Create3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/pinView2Create4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="44sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="289dp"
        android:layout_height="234dp"
        android:layout_marginTop="20dp"
        android:collapseColumns="3"
        android:stretchColumns="0,1,2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinView2CreateBackground">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button

                android:id="@+id/btnCreateNum1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNum2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNum3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="3"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btnCreateNum4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNum5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNum6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="6"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btnCreateNum7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNum8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNum9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="9"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btnCreateNum0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCreateNumBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="X"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>