<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="283dp"
        android:layout_height="278dp"
        android:layout_marginTop="24dp"
        android:collapseColumns="3"
        android:stretchColumns="0,1,2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnForgotPassword">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button

                android:id="@+id/btnEnterNum1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNum2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNum3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="3"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btnEnterNum4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNum5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNum6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="6"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/btnEnterNum7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNum8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNum9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="9"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btnEnterNum0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEnterNumBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:width="75dp"
                android:height="75dp"
                android:backgroundTint="@color/gray"
                android:text="X"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/pinViewEnterBackground"
        android:layout_width="328dp"
        android:layout_height="75dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/layout_round_main_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <TextView
            android:id="@+id/pinViewEnter1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/pinViewEnter2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/pinViewEnter3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/pinViewEnter4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_pin_style"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:text="*"
            android:textSize="48sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="177dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:gravity="center|left"
        android:text="Enter PIN"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Log in"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/btnEnterLogin"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/gray"
        android:enabled="false"
        android:text="Log In"
        android:textColor="@color/black_main_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.204" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="273dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_app_icon" />

    <Button
        android:id="@+id/btnForgotPassword"
        android:layout_width="213dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:width="75dp"
        android:height="75dp"
        android:backgroundTint="@color/black_main_background"
        android:text="@string/forgot_password"
        android:textColor="@color/gray_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinViewEnterBackground" />
</androidx.constraintlayout.widget.ConstraintLayout>