<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/blue_main_background">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/condec_new_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:background="@drawable/layout_white_top_corners"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/frameFeatures"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_blue_corners"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/transparent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWarningDetection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="none"
                    android:background="@color/transparent"
                    android:gravity="bottom|center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Detect"
                    android:textAlignment="center"
                    android:textColor="@color/icon_not_selected"
                    android:textSize="10sp"
                    app:icon="@drawable/warning_detector"
                    app:iconGravity="top"
                    app:iconPadding="5dp"
                    app:iconTint="@color/icon_not_selected" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAppBlocking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="none"
                    android:background="@color/transparent"
                    android:gravity="bottom|center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Apps"
                    android:textAlignment="center"
                    android:textColor="@color/icon_not_selected"
                    android:textSize="10sp"
                    app:icon="@drawable/app_blocking"
                    app:iconGravity="top"
                    app:iconPadding="5dp"
                    app:iconTint="@color/icon_not_selected" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWebsiteBlocking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="none"
                    android:background="@color/transparent"
                    android:gravity="bottom|center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="Websites"
                    android:textAlignment="center"
                    android:textColor="@color/icon_not_selected"
                    android:textSize="10sp"
                    app:icon="@drawable/website_blocking"
                    app:iconGravity="top"
                    app:iconPadding="5dp"
                    app:iconTint="@color/icon_not_selected" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAppUsage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="none"
                    android:background="@color/transparent"
                    android:gravity="bottom|center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="App Usage"
                    android:textAlignment="center"
                    android:textColor="@color/icon_not_selected"
                    android:textSize="10sp"
                    app:icon="@drawable/app_usage_analytics"
                    app:iconGravity="top"
                    app:iconPadding="5dp"
                    app:iconTint="@color/icon_not_selected" />
            </TableRow>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_settings" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5">

        <ImageView
            android:id="@+id/imgViewRename"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_sample_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtViewRename"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="My Device"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Sleep Off"
        android:textColor="@color/sleep_icon_off"
        app:icon="@drawable/icon_sleep_time"
        app:iconGravity="top"
        app:iconSize="30dp"
        app:iconTint="@color/sleep_icon_off"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>