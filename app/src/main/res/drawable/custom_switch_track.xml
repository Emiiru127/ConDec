<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#00E676"/> <!-- Green color for ON state -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/blue_main_background" />
            <size android:height="18dp"/> <!-- Increased height -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC"/> <!-- Gray color for OFF state -->
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/blue_main_background" />
            <size android:height="18dp"/> <!-- Increased height -->
        </shape>
    </item>
</selector>