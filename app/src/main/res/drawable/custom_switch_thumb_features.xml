<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Thumb for the ON state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/switch_icon_on"/> <!-- White thumb -->
            <stroke android:width="1dp" android:color="@color/blue_main_background" />
            <size android:width="20dp" android:height="20dp"/> <!-- Smaller thumb size -->
        </shape>
    </item>
    <!-- Thumb for the OFF state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/switch_icon_off"/> <!-- White thumb -->
            <stroke android:width="1dp" android:color="@color/blue_main_background" />
            <size android:width="20dp" android:height="20dp"/> <!-- Smaller thumb size -->
        </shape>
    </item>
</selector>